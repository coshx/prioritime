modal-dialog action="cancel"
  h3.flush--top Assign To Project
  = form-for controller
    = input selected_person as="select" collection="controller.model.people" optionValuePath="content.id" optionLabelPath="content.name" prompt="Select" label="Team Member"

    = input selected_project as="select" collection="controller.projects_for_person" optionValuePath="content.id" optionLabelPath="content.name" prompt="Select" label="Project"

    = input summary


    .form-group
      button{action "submit"} class="btn btn-form-submit" Submit
      button{action "cancel"} class="btn btn-form-submit" Cancel

